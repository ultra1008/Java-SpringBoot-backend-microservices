<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <RollingFile name="hibernateFileLogger" fileName="logs/hibernate.log"
                     filePattern="logs/hibernate-%d{yyyy-MM-dd}.log">
            <PatternLayout
                    pattern="%style{%d{ISO8601}}{white} %highlight{%-5level }[%style{%tn}{bright,blue}] %style{%C{1}}{bright,yellow}[%style{%L}{bright,yellow}]: %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="15MB"/>
            </Policies>
        </RollingFile>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%style{%d{ISO8601}}{white} %highlight{%-5level }[%style{%tn}{bright,blue}] %style{%C{1}}{bright,yellow}[%style{%L}{bright,yellow}]: %msg%n"/>
        </Console>
        <RollingFile name="gatewayFileLogger" fileName="logs/gateway.log"
                     filePattern="logs/gateway-%d{yyyy-MM-dd}.log">
            <PatternLayout
                    pattern="%style{%d{ISO8601}}{white} %highlight{%-5level }[%style{%tn}{bright,blue}] %style{%C{1}}{bright,yellow}[%style{%L}{bright,yellow}]: %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="15MB"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>

        <Logger name="org.hibernate.type.descriptor.sql" level="trace" additivity="false">
            <AppenderRef ref="hibernateFileLogger"/>
        </Logger>
        <Logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <AppenderRef ref="hibernateFileLogger"/>
        </Logger>
        <Logger name="com.harera" level="trace" additivity="false">
            <AppenderRef ref="gatewayFileLogger"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>

</Configuration>
